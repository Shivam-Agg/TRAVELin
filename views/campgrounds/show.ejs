<% include ../partials/header%>

<div class="container mt-3">
    <div class="row">
        
        
        <div class="col-md-9">
            <div class="img-thumbnail p-0 mb-3 mt-3">
                <img src="<%=campground.image%>" class="index_img">
                <div class="caption-full p-2">
                    <a href=""><p><%= campground.name %></p></a>
                    <p><%=campground.description%></p>
                    
                    
                    <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-warning btn-sm " href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                        <form class ="delete" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    <% } %>
                    
                </div>
            </div>
            
            
            
        </div>
        <div class="col-md-3 mt-3">
           <div class="img-thumbnail bg-light mb-4 p-2">
                <div class="text-right">
                    <a class="btn btn-success btn-sm" href="/campgrounds/<%=campground._id%>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <%for(var i=0;i<campground.comments.length;i++){%>
                   <div class="row">
                      <div class="col-md-12">
                          <strong><%=campground.comments[i].author.username%></strong>
                          <span class="float-right">10days ago</span>
                          <p>
                              <%=campground.comments[i].text%>
                          </p>
                         <% if(currentUser && campground.comments[i].author.id.equals(currentUser._id)){ %>
                              <a class="btn btn-link btn-sm" href="/campgrounds/<%=campground._id%>/comments/<%=campground.comments[i]._id%>/edit">Edit</a>
                              <form class ="delete" action="/campgrounds/<%=campground._id%>/comments/<%=campground.comments[i]._id%>?_method=DELETE" method="POST">
                                 <button class="btn btn-link btn-sm">Delete</button>
                              </form>
                          <% } %>
                      </div>
                   </div>
                <%}%>
            </div>
            <div>
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d14001.195986273908!2d77.1639406!3d28.680701250000002!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sin!4v1548608571048" width="250" height="250" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>
    
<% include ../partials/footer %>