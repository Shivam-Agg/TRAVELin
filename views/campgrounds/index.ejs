<% include ../partials/header%>
<div class="container pt-4">
    <header class="jumbotron bg-secondary">
        <h1>Welcome To TRAVELin!</h1>
        <p>View the best places to visit in and around Delhi!!</p>
        <a class="btn btn-primary" href="/places/new">Add new site</a>
    </header>
    <div class="row text-center">
      <% for(var i=0;i<campgrounds.length;i++){ %>
           <div class="col-md-3 col-sm-6 mb-4">
               <div class="img-thumbnail bg-light border border-secondary">
                   <img src="<%=campgrounds[i].image%>" class="index_img">
                   <div>
                       <caption class="caption"><%= campgrounds[i].name %></caption>
                   </div>
                   <a href="/places/<%=campgrounds[i]._id%>" class="btn btn-primary btn-sm">More Info</a>
               </div>
           </div>
       <% } %>
    </div>
 </div>


<% include ../partials/footer%>