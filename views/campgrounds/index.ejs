<% include ../partials/header%>
<div class="container">
    <header class="jumbotron">
        <h1>Welcome To CAMPin!</h1>
        <p>View our hand-picked camping sites around Delhi!</p>
        <a class="btn btn-primary" href="/campgrounds/new">Add new camping site</a>
    </header>
    <div class="row text-center">
      <% for(var i=0;i<campgrounds.length;i++){ %>
           <div class="col-md-3 col-sm-6 mb-4">
               <div class="img-thumbnail">
                   <img src="<%=campgrounds[i].image%>" class="index_img">
                   <div>
                       <caption class="caption"><%= campgrounds[i].name %></caption>
                   </div>
                   <a href="/campgrounds/<%=campgrounds[i]._id%>" class="btn btn-primary btn-sm">More Info</a>
               </div>
           </div>
       <% } %>
    </div>
 </div>


<% include ../partials/footer%>